                    </ScrollPane>
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <children>
                        <Button fx:id="btn_last" mnemonicParsing="false" onAction="#close" text="Vorherige Seite">
                            <HBox.margin>
                                <Insets right="540.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="btn_cancel" onAction="#show" styleClass="cancel-button" text="Abbrechen" />
                        <Button fx:id="btn_save" defaultButton="true" styleClass="save-button" text="Speichern" onAction="#insert" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
