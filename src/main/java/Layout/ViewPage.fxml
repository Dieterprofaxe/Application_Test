<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.402"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.ViewPageController"
            stylesheets="@../Stylesheet/ViewPage.css"
            prefWidth="1194.0" prefHeight="834.0">

    <VBox spacing="20" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="40"
          AnchorPane.rightAnchor="40" AnchorPane.bottomAnchor="40">

        <!-- Überschrift -->
        <Label text="Alle Gerichte durchsuchen" styleClass="heading" />

        <!-- Inhalt in ScrollPane -->
        <ScrollPane fitToWidth="true" prefHeight="600">
            <VBox spacing="30">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>

                <!-- Suchbereich -->
                <GridPane hgap="25" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints minWidth="180" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label text="Suchbegriff:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="searchField" promptText="Gib ein Stichwort ein..."
                               GridPane.rowIndex="0" GridPane.columnIndex="1" />

                </GridPane>

                <!-- Ergebnisliste -->
                <VBox spacing="10">
                    <Label text="Suchergebnisse:" styleClass="subheading" />
                    <!-- dishContainer darf NICHT self-closing sein -->
                    <VBox  spacing="15">
                        <!-- Dynamische Inhalte werden hier zur Laufzeit hinzugefügt -->
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>

        <!-- Navigation -->
        <HBox alignment="CENTER_RIGHT" spacing="20">
            <Button text="Zurück" fx:id="backButton" styleClass="cancel-button" onAction="#close"/>
            <Button text="Suchen" fx:id="searchButton" />
        </HBox>
    </VBox>
</AnchorPane>